<section class="login">
  <section class="image">
    <img
      src="assets/images/back_ilustration.svg"
      alt="Imagem de ilustração sobre finanças."
    />
  </section>
  <section class="content">
    <section class="form-login">
      <h3>BEM VINDO</h3>
      <form action="/" method="POST" class="form">
        <div class="dados">
          <span class="icon-user icons"></span>
          <input
            type="text"
            id="username"
            name="username"
            class="dados-login dados-email"
            placeholder="Usuário"
          />
        </div>
        <span class="line line-email"></span>

        <div class="dados">
          <span class="icon-cadeado icons"></span>
          <input
            type="password"
            id="password"
            name="password"
            class="dados-login dados-senha"
            placeholder="Senha"
          />
        </div>
        <span class="line line-password"></span>
        <a class="recovery-pass" href="/recovery">Esqueceu a senha?</a>
        <button class="btn-login" type="submit">ENTRAR</button>
        </button>
      </form>
    </section>
  </section>
</section>
